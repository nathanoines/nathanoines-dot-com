# Enable MIME types for modern JavaScript
AddType application/javascript .js
AddType text/css .css
AddType image/svg+xml .svg

# Proxy IFPA API requests through PHP
<IfModule mod_rewrite.c>
  RewriteEngine On

  # Capture /api/ifpa requests and route to PHP proxy
  RewriteCond %{REQUEST_URI} ^/api/ifpa/(.*)$
  RewriteRule ^api/ifpa/(.*)$ /api-proxy.php?path=$1&%{QUERY_STRING} [L]
</IfModule>

# Optional: Enable gzip compression
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/css application/javascript
</IfModule>
